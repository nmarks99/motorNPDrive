record(bo, "$(P)NPDrive:SetSensorsOff") {
    field(DTYP, "asynInt32")
    field(OUT,  "@asyn($(PORT),$(ADDR),$(TIMEOUT=1))SET_SENSORS_OFF")
    field(SCAN, "Passive")
}

record(bo, "$(P)NPDrive:SetDriveChannelsOff") {
    field(DTYP, "asynInt32")
    field(OUT,  "@asyn($(PORT),$(ADDR),$(TIMEOUT=1))SET_DRIVE_CHANNELS_OFF")
    field(SCAN, "Passive")
}

